{
  "compilerOptions": {
    "experimentalDecorators": true,
    "moduleResolution": "node",
    "target": "es5",
    "noImplicitAny": false,
    "noUnusedParameters": true,
    "noUnusedLocals": true,
    "strictNullChecks": true,
    "sourceMap": true,
    "declaration": true,
    "noEmitHelpers": true,
    "importHelpers": true,
    "outDir": "lib",
    "pretty": true,
    "lib": [
      "es2015",
      "es2016",
      "es2017",
      "ES2020.String",
      "DOM.Iterable",
      "dom"
    ],
    "jsx": "react",
    "types": [
      "webpack",
      "webpack-env",
      "jest",
      "@testing-library/jest-dom"
    ]
  },
  "compileOnSave": false,
  "exclude": [
    "node_modules",
    ".tmp",
    "lib",
    "e2e/**"
  ],
  "include": [
    "cli/index.ts",
    "./custom.d.ts",
    "./demo/playground/hmr-playground.tsx",
    "./src/**/*.ts?",
    "demo/*.tsx",
    "src/empty.js"
  ]
}
